cat > .gitignore << 'EOL'
# Dependencies
/node_modules
/.pnp
.pnp.js
/.pnpm-store

# Package managers
bun.lockb
.yarnrc

# Testing
/coverage

# Next.js
/.next/
/out/

# Production
/build
/dist

# Media and uploads
/media/*
!/media/.gitkeep
/public/uploads
/public/media
*.jpg
*.jpeg
*.png
*.gif
*.tif
*.tiff
*.psd
*.ai
*.eps
*.raw
*.cr2
*.nef
*.heic

# Environment
.env
.env.*
!.env.example

# Debug
npm-debug.log*
yarn-debug.log*
pnpm-debug.log*
.pnpm-debug.log*

# System
.DS_Store
*.pem
Thumbs.db

# IDE
.idea
.vscode/*
!.vscode/extensions.json
!.vscode/settings.json
!.vscode/launch.json
*.sublime-*
*.swp
*.swo

# Logs
logs
*.log

# Cache
.cache
.temp
.tmp
EOL

# Add and commit the new .gitignore
git add .gitignore
git commit -m "Update gitignore with comprehensive rules for media files"
git push
.aider*
